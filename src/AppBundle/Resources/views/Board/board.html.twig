<div class="board">
    <div class="boardScore">

    </div>
    <table border>
        {% for row in grid %}
            <tr>
                {% for cell in row %}
                    <td style="background-color: {{ winningGrid and gameState == 3 and [loop.parent.loop.index-1,loop.index-1] in winningGrid ?'gold':'white' }}"
                        width="100px" height="100px"
                        onclick="location ='{{ path('play', {'row': loop.parent.loop.index-1, 'col': loop.index-1}) }}'"
                    >
                        <center style="color: {{ cell == 'x'?'red':'blue' }} ">
                            {{ cell }}
                        </center>
                        <br>
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>
